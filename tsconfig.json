{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "packages/**/*",
    "docs/**/*"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@moonwind-ui/styles": [
        "packages/styles/src"
      ],
      "@moonwind-ui/utils": [
        "packages/utils/src"
      ],
      "@moonwind-ui/hooks": [
        "packages/hooks/src"
      ],
      "@moonwind-ui/*": [
        "packages/*/src"
      ],
      "moonwind-ui": [
        "packages/moonwind-ui/src"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ]
  }
}